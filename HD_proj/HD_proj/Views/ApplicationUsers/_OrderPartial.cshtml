@model RegisterViewmodel

<div class="modal fade" id="add-model" tabindex="-1" role="dialog" aria-labelledby="add-model-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="add-model-label">Tạo mới tài khoản</h5>
                <button type="button" localize-content class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <input asp-for="id" name="check" type="hidden" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        <label class="control-label" localize-content>Tên tài khoản</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" localize-content>Nhập số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" localize-content>Họ tên đầy đủ</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    @if (Model.id == Guid.Empty)
                    {

                        <div class="form-group">
                            <label class="control-label" localize-content>Mật khẩu</label>
                            <input asp-for="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" localize-content>Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    }
                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" localize-content class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                <button type="button" localize-content class="btn btn-primary" data-save="modal">Tạo tài khoản</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#add-model').on('shown.bs.modal', function() { $('form').find('input[type=text],textarea,select').filter(':visible:first').trigger('focus'); });
</script>

@await Html.PartialAsync("_ValidationScriptsPartial")